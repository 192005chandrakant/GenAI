# =============================================================================
# Backend Environment Configuration
# AI-Powered Misinformation Defense Platform
# =============================================================================
# Copy this file to .env and update with your actual values
# For development, set USE_MOCKS=true to use mock services

# =============================================================================
# üîß DEVELOPMENT CONFIGURATION
# =============================================================================
DEBUG=false
USE_MOCKS=false
HOST=0.0.0.0
PORT=8000
RELOAD=false
LOG_LEVEL=INFO

# =============================================================================
# ‚òÅÔ∏è  GOOGLE CLOUD PLATFORM CONFIGURATION
# =============================================================================
GOOGLE_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./secrets/service-account-key.json

# Vertex AI Configuration
VERTEX_LOCATION=us-central1
VERTEX_MODEL_GEMINI_FLASH=gemini-1.5-flash
VERTEX_MODEL_GEMINI_PRO=gemini-1.5-pro
VERTEX_MODEL_EMBEDDING=textembedding-gecko@003

# BigQuery Configuration
BQ_DATASET=misinformation_analytics
BQ_TABLE_CHECKS=checks

# Cloud Storage Configuration
GCS_BUCKET=your-gcs-bucket-name
MAX_FILE_SIZE=10485760

# =============================================================================
# üî• FIREBASE CONFIGURATION
# =============================================================================
# Use the same project as frontend for consistency
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-firebase-private-key-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-firebase-private-key\n-----END PRIVATE KEY-----"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your-firebase-client-id
FIREBASE_AUTH_DOMAIN=googleapis.com

# =============================================================================
# üóÑÔ∏è  DATABASE CONFIGURATION
# =============================================================================
# Firestore Collections
FIRESTORE_COLLECTION_CHECKS=checks
FIRESTORE_COLLECTION_SOURCES=sources
FIRESTORE_COLLECTION_LESSONS=lessons
FIRESTORE_COLLECTION_USERS=users
FIRESTORE_COLLECTION_REPORTS=reports

# =============================================================================
# üîë API KEYS
# =============================================================================
# Google AI Services
GEMINI_API_KEY=your-gemini-api-key
TRANSLATE_API_KEY=your-google-translate-api-key
FACT_CHECK_API_KEY=your-fact-check-tools-api-key

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-min-32-characters
JWT_ALGORITHM=HS256
JWT_AUDIENCE=misinformation-platform

# OAuth Configuration
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
GITHUB_CALLBACK_URL=http://localhost:3001/api/auth/callback/github

# =============================================================================
# üåê CORS & NETWORKING
# =============================================================================
# Frontend URLs (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-domain.com
CORS_ORIGINS=["http://localhost:3000","http://localhost:3001","https://your-domain.com"]

# =============================================================================
# üìÅ FILE STORAGE
# =============================================================================
# Cloudinary Configuration (for media uploads)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =============================================================================
# ü§ñ AI MODEL CONFIGURATION
# =============================================================================
# AI Model Settings
AI_MODEL_DEFAULT=flash
AI_MODEL_ESCALATION_THRESHOLD=0.8
AI_MODEL_TEMPERATURE=0.1
AI_MODEL_MAX_TOKENS=2048

# FAISS Vector Search
FAISS_INDEX_PATH=./data/faiss_index.index
FAISS_DIMENSION=768
FAISS_NPROBE=10

# =============================================================================
# üåç MULTILINGUAL CONFIGURATION
# =============================================================================
SUPPORTED_LANGUAGES=en,hi,bn,te,ta,mr,kn
DEFAULT_LANGUAGE=en

# =============================================================================
# ‚ö° PERFORMANCE & RATE LIMITING
# =============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# üîí PRIVACY & COMPLIANCE
# =============================================================================
DATA_RETENTION_DAYS=90
ANONYMIZE_ANALYTICS=true

# =============================================================================
# üéõÔ∏è  FEATURE FLAGS
# =============================================================================
EVALUATION_ENABLED=true
A_B_TESTING_ENABLED=false
