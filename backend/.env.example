# API Configuration
DEBUG=False
HOST=0.0.0.0
PORT=8000
RELOAD=False
USE_MOCKS=False

# Google Cloud Configuration
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json

# Vertex AI Configuration
VERTEX_LOCATION=us-central1
VERTEX_MODEL_GEMINI_FLASH=gemini-1.5-flash
VERTEX_MODEL_GEMINI_PRO=gemini-1.5-pro
VERTEX_MODEL_EMBEDDING=textembedding-gecko@003

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your-key-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email
FIREBASE_CLIENT_ID=your-client-id
FIREBASE_AUTH_DOMAIN=your-firebase-domain

# Firestore Collections
FIRESTORE_COLLECTION_CHECKS=checks
FIRESTORE_COLLECTION_SOURCES=sources
FIRESTORE_COLLECTION_LESSONS=lessons
FIRESTORE_COLLECTION_USERS=users
FIRESTORE_COLLECTION_REPORTS=reports

# BigQuery Configuration
BQ_DATASET=misinformation_analytics
BQ_TABLE_CHECKS=checks

# Cloud Storage Configuration
GCS_BUCKET=your-gcs-bucket
MAX_FILE_SIZE=10485760

# API Keys
GEMINI_API_KEY=your-gemini-key
TRANSLATE_API_KEY=your-translate-key
FACT_CHECK_API_KEY=your-fact-check-key

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_AUDIENCE=misinformation-platform

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://localhost:3000

# Performance and Rate Limiting
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=30
RATE_LIMIT_PER_MINUTE=60

# AI Model Configuration
AI_MODEL_DEFAULT=flash
AI_MODEL_ESCALATION_THRESHOLD=0.8
AI_MODEL_TEMPERATURE=0.1
AI_MODEL_MAX_TOKENS=2048

# FAISS Configuration
FAISS_INDEX_PATH=./data/faiss_index.index
FAISS_DIMENSION=768
FAISS_NPROBE=10

# Multilingual Configuration
SUPPORTED_LANGUAGES=en,hi,bn,te,ta,mr,kn
DEFAULT_LANGUAGE=en

# Privacy and Data Retention
DATA_RETENTION_DAYS=90
ANONYMIZE_ANALYTICS=true

# Feature Flags
EVALUATION_ENABLED=true
A_B_TESTING_ENABLED=false
