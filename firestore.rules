rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Deny all reads and writes by default
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Allow users to manage their own check results
    match /check_results/{userId}/{checkId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read community content
    match /community_content/{contentId} {
      allow read: if request.auth != null;
    }

    // Allow admin users to manage all content
    match /admin_data/{docId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
