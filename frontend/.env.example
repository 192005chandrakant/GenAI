# Frontend Environment Configuration for AI-Powered Misinformation Defense Platform
# Copy this file to .env.local and update with your actual values

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# Authentication Configuration (NextAuth.js)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-here

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Firebase Configuration (for client SDK)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id

# Optional: Analytics and Monitoring
NEXT_PUBLIC_GA_ID=your-google-analytics-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# App Configuration
NEXT_PUBLIC_APP_NAME="AI-Powered Misinformation Defense Platform"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION="Fast, multilingual AI companion for detecting misinformation"
NEXT_PUBLIC_APP_URL=http://localhost:3001

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true

# UI Configuration
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=["en","hi"]
NEXT_PUBLIC_THEME_MODE=system

# Development Configuration
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false

# PWA Configuration
NEXT_PUBLIC_PWA_NAME="Misinformation Defense"
NEXT_PUBLIC_PWA_SHORT_NAME="MisinfoDefense"
NEXT_PUBLIC_PWA_DESCRIPTION="AI-powered misinformation detection and education"

# Social Media Configuration
NEXT_PUBLIC_TWITTER_HANDLE=@misinfodefense
NEXT_PUBLIC_GITHUB_URL=https://github.com/your-org/misinformation-defense

# External URLs
NEXT_PUBLIC_DOCUMENTATION_URL=https://docs.misinfodefense.com
NEXT_PUBLIC_SUPPORT_URL=https://support.misinfodefense.com
NEXT_PUBLIC_PRIVACY_POLICY_URL=https://misinfodefense.com/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=https://misinfodefense.com/terms
