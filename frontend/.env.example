# =============================================================================
# Frontend Environment Configuration
# AI-Powered Misinformation Defense Platform
# =============================================================================
# Copy this file to .env.local and update with your actual values
# Note: Only NEXT_PUBLIC_ variables are exposed to the browser

# =============================================================================
# üîó API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000
NEXT_PUBLIC_API_VERSION=v1

# =============================================================================
# üîê AUTHENTICATION CONFIGURATION
# =============================================================================
# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-key-min-32-characters

# =============================================================================
# üî• FIREBASE CONFIGURATION (CLIENT SDK)
# =============================================================================
# Must match backend Firebase project for consistency
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-firebase-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id

# =============================================================================
# üîë OAUTH CONFIGURATION
# =============================================================================
# Google OAuth (for NextAuth.js)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# GitHub OAuth (for NextAuth.js)
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

# =============================================================================
# üì± APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_NAME="AI-Powered Misinformation Defense Platform"
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION="Fast, multilingual AI companion for detecting misinformation"
NEXT_PUBLIC_APP_URL=http://localhost:3001

# =============================================================================
# üéõÔ∏è  FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_OFFLINE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_SOCIAL_SHARING=true
NEXT_PUBLIC_ENABLE_GUEST_MODE=true

# =============================================================================
# üåç INTERNATIONALIZATION
# =============================================================================
NEXT_PUBLIC_DEFAULT_LANGUAGE=en
NEXT_PUBLIC_SUPPORTED_LANGUAGES=["en","hi","bn","te","ta","mr","kn"]

# =============================================================================
# üé® UI CONFIGURATION
# =============================================================================
NEXT_PUBLIC_THEME_MODE=system
NEXT_PUBLIC_PRIMARY_COLOR=#3b82f6

# =============================================================================
# üîß DEVELOPMENT CONFIGURATION
# =============================================================================
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_ENVIRONMENT=development

# =============================================================================
# üë§ GUEST MODE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_GUEST_DAILY_LIMIT=10
NEXT_PUBLIC_GUEST_FEATURE_PROMPT=true
NEXT_PUBLIC_GUEST_UPGRADE_FREQUENCY=3

# =============================================================================
# üìä ANALYTICS & MONITORING
# =============================================================================
# Google Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# =============================================================================
# üì± PWA CONFIGURATION
# =============================================================================
NEXT_PUBLIC_PWA_NAME="Misinformation Defense"
NEXT_PUBLIC_PWA_SHORT_NAME="MisinfoDefense"
NEXT_PUBLIC_PWA_DESCRIPTION="AI-powered misinformation detection and education"

# =============================================================================
# üåê SOCIAL & EXTERNAL LINKS
# =============================================================================
NEXT_PUBLIC_TWITTER_HANDLE=@misinfodefense
NEXT_PUBLIC_GITHUB_URL=https://github.com/your-org/misinformation-defense
NEXT_PUBLIC_DOCUMENTATION_URL=https://docs.misinfodefense.com
NEXT_PUBLIC_SUPPORT_URL=https://support.misinfodefense.com
NEXT_PUBLIC_PRIVACY_POLICY_URL=https://misinfodefense.com/privacy
NEXT_PUBLIC_TERMS_OF_SERVICE_URL=https://misinfodefense.com/terms
